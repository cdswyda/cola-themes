extends base.jade

block title
	title= site.title if not request.path.strip("/") else request.offset_path1

block head
    //- +h.load('markdown')

block content    
    //- span= request.get_offset_path(1)
    //- span= request.path
	this_tag = request.get_offset_path(1)
	this_count = 0
    if this_tag == ''
        ul: for tag_name, tag_count in site.tags
            li
                a(href="/tag/{{tag_name}}")
                    span= tag_name
                    span= tag_count        
    else
		h2= this_tag
			span= posts.count
		ul: for post in posts
			this_count = this_count + 1
			li: a(href="{{post.url}}")
                h2= post.title
                //- span= post.url
        hr
		span= '共 ' + this_count + '篇'
