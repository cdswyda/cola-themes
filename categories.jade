extends base.jade

block head
	+h.load("/template/css/categories.css")

block title
	title= "Categories - " + site.title

block content
	categories = d.get_data(type='folder', sort='position', limit=99, level=1, excludes=["_", "template", "configs", "comments"])
	
	#categories: .page_wrap: .pure-g.cat_list
		for category in categories
			.pure-u-1.pure-u-md-1-2.pure-u-lg-1-3: .category
				category_url = '/category/%s'%category.path
				cover_src = category.cover or '/fb_static/unsplash/1.jpg'
				a.pic(href=category_url)
					span(style="background-image:url({{cover_src}})")
				h2
					a(href=category_url)= "[ %s ]"%category.title
				.category_description= category.content.limit(999, keep_images=False)